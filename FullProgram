#include <iostream>
#include <string>
#include <iomanip>
#include <cctype>

using namespace std;
void getText(char text[], int max);
void display(char text[], int letterSum);
int getLetterCount(char text[], int max, char letter);

int main()
{
	char letter[256];
	char text[256];
	int letterSum;

	cout << "Enter a letter: ";
	cin >> letter;
	cin.ignore();

	getText(text, sizeof(text) / sizeof(text[0]));

	letterSum = getLetterCount(text, sizeof(text) / sizeof(text[0]), letter[256]);

	display(letter, letterSum);


	return 0;
}

// Will display the an
void display(char letter[], int letterSum)
{

	cout << letter << " appears " << letterSum << " times." << endl;

}

void getText(char text[], int max)
{
	cout << "Enter Text: ";
	cin >> text;
	cin.getline(text, max);
}

int getLetterCount(char text[], int max, char letter)
{
	// Count letters
	int letterSum = 0;
	for (int i = 0; i < sizeof(text); i++)
	{
		if (text[i] == letter)
		{
			letterSum++;
		}
	}
	cout << letterSum << " (From getLetterCount)" << endl;
	return letterSum;
}
